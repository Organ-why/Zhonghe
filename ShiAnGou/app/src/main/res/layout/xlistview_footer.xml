<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp" >

    <RelativeLayout
        android:id="@+id/xlistview_footer_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp" >

        <ProgressBar
            android:id="@+id/xlistview_footer_progressbar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:indeterminateDrawable="@anim/common_small_circle_anim"
            android:visibility="gone" />

        <TextView
            android:id="@+id/xlistview_footer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/xlistview_footer_progressbar"
            android:text="@string/homepage_xlist_footertext"
            android:textColor="@color/res_color_black_secondary_text"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>