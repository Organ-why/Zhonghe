<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhonghe.shiangou.ui.widget.xlistview.NXListViewNO
        android:id="@+id/guest_detail_xlistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_transparent"
        android:cacheColorHint="@color/common_transparent"
        android:divider="@null"
        android:fadingEdge="none"
        android:paddingBottom="@dimen/height_ll_custom"
        android:listSelector="@color/common_transparent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_ll_custom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/id_goodsdetail_like_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_xxmsize"
            android:background="@color/common_white"
            android:src="@mipmap/res_follow_nomal" />

        <Button
            android:id="@+id/id_goodsdetail_buynow_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@mipmap/res_buynow_bg"
            android:text="@string/prodetail_buy_buy"
            android:textColor="@color/common_white"
            android:textSize="@dimen/font_xxmsize" />

        <Button
            android:id="@+id/id_goodsdetail_addcart_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/id_goodsdetail_buynow_bt"
            android:background="@mipmap/res_addcard_bg"
            android:text="@string/prodetail_buy_addcart"
            android:textColor="@color/common_white"
            android:textSize="@dimen/font_xxmsize" />
    </RelativeLayout>
</RelativeLayout>