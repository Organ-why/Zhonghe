<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_xxlsize">

    <TextView
        style="@style/common_text_gray_deep_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_ll_item"
        android:gravity="center_vertical"
        android:text="@string/search_title_hot" />

    <com.zhonghe.shiangou.ui.widget.FlowLayout1
        android:id="@+id/id_search_hot_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </com.zhonghe.shiangou.ui.widget.FlowLayout1>

    <TextView
        style="@style/common_text_gray_deep_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_ll_item"
        android:gravity="center_vertical"
        android:text="@string/search_title_history" />

    <com.zhonghe.shiangou.ui.widget.FlowLayout1
        android:id="@+id/id_search_history_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </com.zhonghe.shiangou.ui.widget.FlowLayout1>
</LinearLayout>