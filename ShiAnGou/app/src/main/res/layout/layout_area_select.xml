<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apptools="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_hsize">

    <LinearLayout

        android:id="@+id/photo_id_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/id_addarea_tv"
            style="@style/common_content_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_ll_item"
            android:background="@color/common_white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_xxlsize"
            tools:text="北京" />

        <View style="@style/common_divider_style1" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_white"
            android:orientation="horizontal">


            <ListView
                android:id="@+id/id_area_province"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:divider="@drawable/res_ic_list_black_divider"
                android:scrollbars="none" />

            <ListView
                android:id="@+id/id_area_city"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:divider="@drawable/res_ic_list_black_divider"
                android:scrollbars="none" />

            <ListView
                android:id="@+id/id_area_district"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:divider="@drawable/res_ic_list_black_divider"
                android:scrollbars="none" />
