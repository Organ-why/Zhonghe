<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:orientation="vertical">

    <View style="@style/common_divider_style1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_msize"
        android:paddingLeft="@dimen/padding_xxlsize"
        android:paddingRight="@dimen/padding_xxlsize"
        android:paddingTop="@dimen/padding_msize">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/id_home_category_item_iv"
            android:layout_width="@dimen/home_category_item_img_width"
            android:layout_height="@dimen/home_category_item_img_height"
            android:scaleType="fitXY"
            app:placeholderImage="@mipmap/icon_pro_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_delete" />


            <TextView
                style="@style/home_category_item_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_h"
                android:text="288积分" />


        </LinearLayout>

        <Button
            android:id="@+id/id_point_zero_submit_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_orange_hollow_bg"
            android:gravity="center"
            android:padding="@dimen/padding_lsize"
            android:text="@string/common_point_exchange_str"
            android:textColor="@color/res_color_apptheme"
            android:textSize="@dimen/font_msize"
            android:visibility="visible" />

        <TextView
            android:id="@+id/id_home_category_item_title_tv"
            style="@style/common_text_gray_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/id_home_category_item_iv"
            android:layout_marginLeft="@dimen/margin_xxlsize"
            android:layout_toLeftOf="@id/id_point_zero_submit_bt"
            android:layout_toRightOf="@id/id_home_category_item_iv"
            android:text="滑仔菇滑仔菇滑仔菇滑仔菇滑滑仔菇滑仔菇滑仔菇滑仔菇滑仔菇" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/id_home_category_item_iv"
            android:layout_marginLeft="@dimen/margin_xxlsize"
            android:layout_toRightOf="@id/id_home_category_item_iv"
            android:orientation="horizontal">

            <TextView
                style="@style/common_text_gray_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/prodetail_refunds_money" />

            <TextView
                android:id="@+id/id_home_category_item_price_tv"
                style="@style/home_category_item_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_m"
                android:text="288积分" />


        </LinearLayout>


    </RelativeLayout>
</LinearLayout>