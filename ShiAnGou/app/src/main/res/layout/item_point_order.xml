<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/common_white"
    android:orientation="vertical">

    <View style="@style/common_divider_style1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_msize"
        android:paddingLeft="@dimen/padding_xxlsize"
        android:paddingRight="@dimen/padding_xxlsize"
        android:paddingTop="@dimen/padding_msize">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/id_home_category_item_iv"
            android:layout_width="@dimen/home_category_item_img_width"
            android:layout_height="@dimen/home_category_item_img_height"
            android:scaleType="fitXY"
            app:placeholderImage="@mipmap/icon_pro_default" />

        <LinearLayout
            android:id="@+id/ids_point_order_msg_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:orientation="vertical">

            <ImageButton
                android:background="@null"
                android:id="@+id/id_point_record_del_iv"
                android:layout_width="@dimen/view_width_lsize"
                android:layout_height="@dimen/view_width_lsize"
                android:src="@mipmap/icon_delete" />


            <TextView
                android:id="@+id/id_point_record_num_tv"
                style="@style/home_category_item_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_h"
                android:text="288积分" />


        </LinearLayout>



        <TextView
            android:id="@+id/id_home_category_item_title_tv"
            style="@style/common_text_gray_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/id_home_category_item_iv"
            android:layout_marginLeft="@dimen/margin_xxlsize"
            android:layout_toLeftOf="@id/ids_point_order_msg_ll"
            android:layout_toRightOf="@id/id_home_category_item_iv"
            tools:text="@string/str_home_category_title" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/id_home_category_item_iv"
            android:layout_marginLeft="@dimen/margin_xxlsize"
            android:layout_toRightOf="@id/id_home_category_item_iv"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_point_record_time_tv"
                style="@style/common_text_gray_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/point_record_time" />



        </LinearLayout>


    </RelativeLayout>
</LinearLayout>