<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View style="@style/common_divider_style10" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/id_home_category_item_title_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_categoryimg_height"
        android:scaleType="fitXY"
        app:placeholderImage="@mipmap/res_defualt_category" />

    <LinearLayout
        android:id="@+id/id_home_category_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">


    </LinearLayout>
</LinearLayout>