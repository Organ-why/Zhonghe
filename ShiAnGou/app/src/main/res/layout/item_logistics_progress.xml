<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/image_height_size"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <View
                    android:id="@+id/id_view_up"
                    style="@style/common_vertical_divider_style"
                    android:layout_weight="1"
                    android:visibility="visible" />

                <View
                    android:id="@+id/id_view_down"
                    style="@style/common_vertical_divider_style"
                    android:layout_weight="1" />

            </LinearLayout>

            <ImageView
                android:id="@+id/id_view_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_gray_dot" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_logistics_progress_title_tv"
                    style="@style/common_text_gray_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="快件已经签收" />

                <TextView
                    android:id="@+id/id_logistics_progress_time_tv"
                    style="@style/common_text_gray_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_logistics_progress_title_tv"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/margin_m"
                    android:text="快件已经签收" />
            </LinearLayout>

            <View
                style="@style/common_divider_style1"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>